{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "es5",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "lib"
	},
	"include": ["src/"],
	"exclude": ["node_modules"],
	"lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020"]
}
 