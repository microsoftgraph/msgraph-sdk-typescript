{
    "$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"importHelpers": true,
		"noEmitOnError": true,
		"moduleResolution": "node",
		"strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
		"declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "rootDir": "src/",
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}